{
    "name": "haufe-challenge-api",
    "version": "1.0.0",
    "description": "Haufe Challenge API",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dit && tsc",
        "dev": "NODE_ENV=development concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
        "lint": "eslint --ext .ts src",
        "predev": "npm run swagger",
        "start": "NODE_ENV=production node dist/index.js",
        "swagger": "tsoa spec",
        "test": "npm run lint && npm run test:unit && npm run test:integration",
        "test:unit": "nyc --nycrc-path=.nycrc.unit.json mocha --exit --require ts-node/register --watch-extensions ts --ui bdd \"./test/**/unit/**/*.spec.ts\"",
        "test:integration": "nyc --nycrc-path=.nycrc.integration.json mocha --exit --require ts-node/register --watch-extensions ts --ui bdd \"./test/**/integration/**/*.spec.ts\""
    },
    "author": "Nicolas Balduzzi",
    "license": "ISC",
    "dependencies": {
        "@types/node-fetch": "^2.5.8",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^4.4.1",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^3.6.6",
        "mongoose": "^5.12.3",
        "node-fetch": "^2.6.1",
        "typescript-ioc": "^3.2.2",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/chai-as-promised": "^7.1.3",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.37",
        "@types/sinon": "^9.0.11",
        "@types/swagger-ui-express": "^4.1.2",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "concurrently": "^6.0.0",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "mocha": "^8.3.2",
        "mongodb-memory-server": "^6.9.6",
        "nock": "^13.0.11",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "sinon": "^10.0.0",
        "swagger-express-typescript": "^1.0.2",
        "swagger-ui-express": "^4.1.6",
        "ts-node": "^9.1.1",
        "tsoa": "^3.6.1",
        "typescript": "^4.2.3"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/index.ts"
    }
}
