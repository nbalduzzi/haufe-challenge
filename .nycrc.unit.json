{
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": ["src/**/services/**/*.ts", "src/**/gateways/**/*.ts"],
    "exclude": ["src/**/index.ts"],
    "reporter": ["lcov", "text-summary", "html"],
    "extension": [".ts"],
    "cache": true,
    "all": true,
    "watermarks": {
        "lines": [80, 95],
        "functions": [80, 95],
        "branches": [80, 95],
        "statements": [80, 95]
    }
}
